    "openai": "^4.68.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "jest": "^30.2.0",
    "prisma": "^5.22.0",
    "supertest": "^7.2.2"
  }
